  <section class="section section-feature-grey is-medium">
    <div class="container">
      <div class="columns is-vcentered app-side">
        <div class="column is-4 is-offset-1">
          <h3 class="title is-3 is-spaced is-title-reveal">An intuitive app</h3>
          <p class="subtitle is-5 is-muted">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cum
            audissem Antiochum, Brute, ut solebam, cum M. Quae diligentissime
            contra Aristonem dicuntur a Chryippo.
          </p>
        </div>
        <div class="column is-7">
          <div class="has-text-centered">
            <img
              class="side-image"
              src="/img/illustrations/workers.svg"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  
  <section
    class="section is-medium has-background-image"
    data-background="https://source.unsplash.com/g30P1zcOzXo/1600x900"
    data-color="#4FC1EA"
    data-color-opacity=".1"
